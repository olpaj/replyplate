<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           xsi:type="MailApp">
  <Id>d94e46c5-cf98-4f39-9c12-bcafabd7fb14</Id>
  <Version>1.0</Version>
  <ProviderName>mikolaj_olpinski</ProviderName>
  <Permissions>ReadWriteMailbox</Permissions>
  <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Reply with Template"/>
  <Description DefaultValue="Reply to the sender with a predefined template."/>
  <IconUrl DefaultValue="https://raw.githubusercontent.com/olpaj/replyplate/main/icon.png"/>
  <HighResolutionIconUrl DefaultValue="https://raw.githubusercontent.com/olpaj/replyplate/main/icon.png"/>
  <SupportUrl DefaultValue="https://chat.openai.com/"/>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.4">
      <Set Name="Mailbox" MinVersion="1.4"/>
    </Sets>
  </Requirements>
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://raw.githubusercontent.com/olpaj/replyplate/main/index.html"/>
        <RequestedHeight>50</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  <ExtensionPoints>
    <ExtensionPoint xsi:type="MessageReadCommandSurface">
      <CommandSurface>
        <CommandGroup>
          <Icon>
            <bt:Image id="icon-16" DefaultValue="https://raw.githubusercontent.com/olpaj/replyplate/main/icon-16.png"/>
            <bt:Image id="icon-32" DefaultValue="https://raw.githubusercontent.com/olpaj/replyplate/main/icon-32.png"/>
            <bt:Image id="icon-80" DefaultValue="https://raw.githubusercontent.com/olpaj/replyplate/main/icon-80.png"/>
          </Icon>
          <!-- ... other elements ... -->
        </CommandGroup>
      </CommandSurface>
    </ExtensionPoint>
  </ExtensionPoints>
</OfficeApp>
